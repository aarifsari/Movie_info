@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #1a1a1a;
            color: #fff;
            scroll-behavior: smooth;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        .content {
            flex: 1 0 auto;
        }

        footer {
            flex-shrink: 0;
            background-color: #1a1a1a !important;
            color: #ccc;
            font-size: 0.9rem;
            border-top: 1px solid #333;
            padding: 1rem 0;
        }

            footer a {
                color: #ccc;
                text-decoration: none;
            }

                footer a:hover {
                    color: #fff;
                    text-decoration: underline;
                }

        .navbar {
            background-color: #ff0000 !important;
            box-shadow: 0 3px 4px rgba(0, 0, 0, 0.8);
        }

        .navbar-brand, .nav-link, .navbar-text {
            color: #fff !important;
        }

            .nav-link:hover, .navbar-text:hover {
                color: #ccc !important;
            }

        .btn-outline-secondary {
            color: #fff;
            border-color: #fff;
            transition: all 0.3s ease;
        }

            .btn-outline-secondary:hover {
                background-color: #fff;
                color: #000;
                border-color: #fff;
            }

            .btn-outline-secondary.active {
                background-color: #fff;
                color: #000;
                font-weight: bold;
            }

        .btn-primary {
            background-color: #ff0000;
            border-color: #ff0000;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #ff0000;
                border-color: #ff0000;
            }

        .card {
            background-color: #2a2a2a;
            color: #fff;
            border: 1px solid #444;
            border-radius: 0.6rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
            margin-bottom: 1.5rem;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.6);
            }

        .card-header {
            background-color: #333;
            border-bottom: 1px solid #444;
            font-weight: 600;
            font-size: 1.1rem;
        }

        .card-body {
            padding: 1.2rem;
            
        }

        .btn-group .btn {
            border-radius: 0;
        }

        a {
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        .form-control,
        .form-check-input {
            background-color: #2a2a2a;
            color: #fff;
            border: 1px solid #555;
        }

            .form-control:focus,
            .form-check-input:focus {
                background-color: #2a2a2a;
                color: #fff;
                box-shadow: 0 0 0 0.1rem white, 0 0 0 0.25rem #258cfb;
            }

        .alert {
            background-color: #ffc107;
            color: #000;
            border-radius: 0.5rem;
        }

        .navbar-toggler {
            border-color: #fff;
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba%28255,255,255,0.9%29' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
        }

        .float-end .btn {
            margin-left: 1rem;
        }
    </style>

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">     
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <div class="navbar-nav">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                 
                </div>
                <div class="navbar-nav ms-auto">
                    @if (string.IsNullOrEmpty(HttpContextAccessor.HttpContext?.Request.Cookies["UserInfo"]))
                    {
                        <a class="nav-link" asp-controller="Login" asp-action="Index">Login!</a>
                    }
                    else
                    {
                        <span class="navbar-text me-2">Welcome, @HttpContextAccessor.HttpContext?.Request.Cookies["UserInfo"]?.Split(',')[0]!</span>
                        <form asp-controller="Home" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="nav-link btn btn-link text-danger">Log Out!</button>
                        </form>
                        
                    }
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-3">      
        <div class="float-end">
            <a href="@Url.Action("Index", "Cart")" class="btn btn-primary">Display Cart</a>
        </div>
    </div>

    <div class="content">
        <div class="container mt-4">
            @RenderBody()
        </div>
    </div>

    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>